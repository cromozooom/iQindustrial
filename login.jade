extend template\jade-bootstrap\_bootstrap.jade
append styles
	link(href='https://fonts.googleapis.com/css?family=Josefin+Sans:400,700|Exo:400,800' rel='stylesheet' type='text/css')
	
block body
	include template/topNavigation.jade
	.container
		.row.spaceTop
			.col-md-6.col-md-offset-3
				.panel.panel-login
					.panel-heading
						.row
							.col-xs-6
								a#login-form-link.active(href='#') Login
							.col-xs-6
								a#register-form-link(href='#') Register
							hr
					.panel-body
						.row
							.col-lg-12
								form#login-form(action='#', method='post', role='form', style='display: block;')
									.form-group
										input#username.form-control(type='text', name='username', tabindex='1', placeholder='Username', value='')
									.form-group
										input#password.form-control(type='password', name='password', tabindex='2', placeholder='Password')
									.form-group.text-center
										input#remember(type='checkbox', tabindex='3', name='remember')
										label(for='remember')  Remember Me
									.form-group
										.row
											.col-sm-6.col-sm-offset-3
													input#login-submit.form-control.btn.btn-login(type='submit', name='login-submit', tabindex='4', value='Log In')
											.form-group
												.row
													.col-lg-12
														.text-center
															a.forgot-password(href='#', tabindex='5') Forgot Password?
								
								form#register-form(action='#', method='post', role='form', style='display: none;')
									.form-group
										label(for='nume') Nume
										input#nume.form-control(type='text', name='nume', tabindex='1', placeholder='Nume', value='')
									.form-group
										label(for='prenume') Prenume
										input#prenume.form-control(type='text', name='prenume', tabindex='1', placeholder='Prenume', value='')
									.form-group
										label(for='email') Email
										input#email.form-control(type='email', name='email', tabindex='1', placeholder='Email', value='')
									.form-group
										label(for='industry') Industry
											select.form-control
												option Industry
												option 2
												option 3
												option 4
												option 5
									.form-group
										label(for='tara') Tara
										input#email.form-control(type='text', name='tara', tabindex='1', placeholder='Tara', value='')
									.form-group
										label(for='functie') Functie
										input#email.form-control(type='text', name='functie', tabindex='1', placeholder='Functie', value='')
									
									.form-group
										label(for='password') Password
										input#password.form-control(type='password', name='password', tabindex='2', placeholder='Password')
									.form-group
										input#confirm-password.form-control(type='password', name='confirm-password', tabindex='2', placeholder='Confirm Password')
									.form-group
									.row
										.col-sm-6.col-sm-offset-3
											input#register-submit.form-control.btn.btn-register(type='submit', name='register-submit', tabindex='4', value='Register Now')
append scripts
	script(src="assets/javascripts/login.js")
